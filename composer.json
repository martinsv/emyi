{
  "name": "douggr/emyi",
  "description": "Sleek, intuitive and powerful PHP framework for faster and easier web development",
  "type": "library",
  "canonical": "https://github.com/douggr/emyi",
  "keywords": ["mvc", "framework", "micro-framework"],
  "homepage": "http://github.com/douggr/emyi",
  "license": "MIT",
  "authors": [
    {
      "name": "Douglas G. R.",
      "homepage": "http://douggr.github.io"
    }
  ],

  "require": {
    "php": "~5.4",
    "ext-pcre": "*",
    "ext-reflection": "*",
    "ext-spl": "*",
    "lib-curl": "*"
  },

  "require-dev": {
    "phpunit/phpunit": "~3.7"
  },

  "autoload": {
    "psr-0": {
      "Emyi\\": "library/"
    },
    "files": [
      "library/bootstrap.php",
      "library/exceptions.php"
    ]
  },

  "archive": {
      "exclude": [".travis.yml", "tests", "phpunit.xml*", "composer.phar", "!vendor"]
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
